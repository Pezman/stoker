<%= error_messages_for :blower %>

<p>
  <b>Serial number</b><br />
  <%= f.text_field :serial_number %>
</p>

<p>
  <b>Name</b><br />
  <%= f.text_field :name %>
</p>

<% if @blower.stoker -%>
  <p>
    <b>Sensor</b><br />
    <%= f.collection_select :sensor_id, @blower.stoker.sensors.find(:all), :id, :name, {:include_blank => true} %>
  </p>
<% else -%>
  <p class="warning">Cannot set sensor, this blower is not connected to a stoker.</p>
<% end -%>

<p>
  <b>Stoker</b><br />
  <%= f.collection_select :stoker_id, Stoker.find(:all), :id, :name, {:include_blank => true} %>
</p>
