<h2>Listing sensors</h2>

<table>
  <tr>
    <th>Serial number</th>
    <th>Name</th>
    <th>Temp</th>
    <th>Target</th>
    <th>Alarm</th>
    <th>Low</th>
    <th>High</th>
    <th>Blower</th>
    <th>Stoker</th>
  </tr>

<% for sensor in @sensors %>
  <tr>
    <td><%=h sensor.serial_number %></td>
    <td><%=h sensor.name %></td>
    <td><%=h sensor.temp %></td>
    <td><%=h sensor.target %></td>
    <td><%=h sensor.alarm %></td>
    <td><%=h sensor.low %></td>
    <td><%=h sensor.high %></td>
    <td><%= link_to sensor.blower.name, sensor.blower if sensor.blower %></td>
    <td><%= link_to sensor.stoker.name, sensor.stoker if sensor.stoker %></td>
    <td><%= link_to 'Show', sensor %></td>
    <td><%= link_to 'Edit', edit_sensor_path(sensor) %></td>
    <td><%= link_to 'Destroy', sensor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

