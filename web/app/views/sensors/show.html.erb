<h2><%= @sensor.name %></h2>

<%= link_to image_tag("delete.png") + ' Delete', @sensor, :confirm => 'Are you sure?', :method => :delete, :style => "float:right;" %>

<p>
  <%= link_to image_tag("pencil.png") + ' Edit', edit_sensor_path(@sensor) %>
</p>

<p>
  <b>Serial number:</b>
  <%=h @sensor.serial_number %>
</p>

<p>
  <b>Target:</b>
  <%=h @sensor.target %>
</p>

<p>
  <b>Alarm:</b>
  <%=h @sensor.alarm %>
</p>

<p>
  <b>Low:</b>
  <%=h @sensor.low %>
</p>

<p>
  <b>High:</b>
  <%=h @sensor.high %>
</p>

<p>
  <b>Blower:</b>
  <%= link_to @sensor.blower.name, @sensor.blower if @sensor.blower %>
</p>

<p>
  <b>Stoker:</b>
  <%= link_to @sensor.stoker.name, @sensor.stoker if @sensor.stoker %>
</p>

<p>
  <b>Last Updated:</b>
  <%= format_datetime(@sensor.updated_at) %>
</p>
