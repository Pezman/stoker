<%= error_messages_for :sensor %>
<%= error_messages_for :blower %>

<p>
  <b>Serial number</b><br />
  <%= f.text_field :serial_number %>
</p>

<p>
  <b>Name</b><br />
  <%= f.text_field :name %>
</p>

<p>
  <b>Target</b><br />
  <%= f.text_field :target %>
</p>

<p>
  <b>Alarm</b><br />
  <%= f.select :alarm, Sensor::ALARMS %>
</p>

<p>
  <b>Low</b><br />
  <%= f.text_field :low %>
</p>

<p>
  <b>High</b><br />
  <%= f.text_field :high %>
</p>

<p>
  <b>Blower</b><br />
  <%= f.collection_select :blower_id, Blower.find(:all), :id, :name, {:include_blank => true} %>
</p>

<p>
  <b>Stoker</b><br />
  <%= f.collection_select :stoker_id, Stoker.find(:all), :id, :name, {:include_blank => true} %>
</p>
